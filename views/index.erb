
    <h1>A MESSAGE APP</h1>
    <form action="/message" method="post">
      <input type="text" name="content">
      <input type="submit" value="Create">
    </form>
    <% @messages.reverse.each do |message| %>
      <div>
        <%= message.created_at %>: <a href=<%="/messages/#{message.id}"%>><%= message.content %></a> 
      </div>
    <% end %>
 